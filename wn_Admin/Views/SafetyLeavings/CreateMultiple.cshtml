@model wn_Admin.Models.UtilityModels.SafetyLeavingViewModel
@{
    ViewBag.Title = "CreateMultiple";
}

<h2>CreateMultiple</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Meeting ID: @Model.MeetingID</h3>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    var i = 0;
                    foreach (var item in Model.LeavingItems)
                    {
                        <div class="col-md-6">
                            @Html.Hidden("item" + i + "_name", @item.SafetyLeavingItemID)
                            <select name="item_ @i _name">
                                @foreach (var option in Model.YesNoNAs)
                                {
                                    <option value="@option.YesNoNAID">@option.YesNoNAName</option>
                                }
                            </select>
                            @item.SafetyLeavingItemName
                        </div>
                    
                        i++;
                    }
                }
            </div>
        </div>
    </div>
</div>

