@model wn_Admin.Models.UtilityModels.SummaryModel

@{
    ViewBag.Title = "Index";
}

<h2>Project Summary</h2>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("Index", "ProjectSummary", FormMethod.Get))
        {


            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h3 class="panel-title">Advanced Search</h3>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            @Html.DropDownList("ClientID", null, "Choose ...", htmlAttributes: new { @class="form-control"})
                        </div>

                        <div class="col-md-3">
                            @Html.DropDownList("ProjectID", null, "Choose ...", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="panel-footer">
                    <input class="btn btn-default" type="submit" value="Search" />
                </div>
            </div>
        }
        
    </div>
</div>

@{
    var mixedWorkings = Model.MixedWorkings;
    var individualWorkings = Model.IndividualWorkings;
    var expenses = Model.ProjectExpenses;
    
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Mixed
                    </h3>
                </div>

                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.MixedWorkings.FirstOrDefault().Employee.FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.MixedWorkings.FirstOrDefault().Date)</th>
                            <th>@Html.DisplayNameFor(model => model.MixedWorkings.FirstOrDefault().JobDescription)</th>
                            <th>@Html.DisplayNameFor(model => model.MixedWorkings.FirstOrDefault().Hours)</th>
                            <th>@Html.DisplayNameFor(model => model.MixedWorkings.FirstOrDefault().Bank)</th>
                            <th>@Html.DisplayNameFor(model => model.MixedWorkings.FirstOrDefault().OT)</th>
                        </tr>

                        @foreach (var w in mixedWorkings)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => w.Employee.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => w.Date)</td>
                                <td>@Html.DisplayFor(modelItem => w.JobDescription)</td>
                                <td>@Html.DisplayFor(modelItem => w.Hours)</td>
                                <td>@Html.DisplayFor(modelItem => w.Bank)</td>
                                <td>@Html.DisplayFor(modelItem => w.OT)</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        By Name
                    </h3>
                </div>

                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.IndividualWorkings.FirstOrDefault().Name)</th>
                            <th>@Html.DisplayNameFor(model => model.IndividualWorkings.FirstOrDefault().Hours)</th>
                            <th>@Html.DisplayNameFor(model => model.IndividualWorkings.FirstOrDefault().Bank)</th>
                            <th>@Html.DisplayNameFor(model => model.IndividualWorkings.FirstOrDefault().OverTime)</th>
                        </tr>

                        @foreach (var w in individualWorkings)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => w.Name)</td>
                                <td>@Html.DisplayFor(modelItem => w.Hours)</td>
                                <td>@Html.DisplayFor(modelItem => w.Bank)</td>
                                <td>@Html.DisplayFor(modelItem => w.OverTime)</td>
                            </tr>
                        }
                        <tr>
                            <td><strong>Total</strong></td>
                            <td><strong>@ViewBag.HourSum</strong></td>
                            <td><strong>@ViewBag.BankSum</strong></td>
                            <td><strong>@ViewBag.OTSum</strong></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Expenses
                    </h3>
                </div>

                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ProjectExpenses.FirstOrDefault().DateSubmitted)</th>
                            <th>@Html.DisplayNameFor(model => model.ProjectExpenses.FirstOrDefault().Amount)</th>
                        </tr>

                        @foreach (var w in expenses)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => w.DateSubmitted)</td>
                                <td>$@Html.DisplayFor(modelItem => w.Amount)</td>
                            </tr>
                        }

                        <tr>
                            <td><strong>Total</strong></td>
                            <td><strong>$@ViewBag.AmountSum</strong></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    
}

