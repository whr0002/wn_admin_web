@model wn_Admin.Models.Project

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FK_Client.ClientID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FK_Client.ClientID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Workings)
        </dt>
        <dd>
            <table class="table" style="background: lightblue">
                <tr>
                    <th>Employee</th>
                    <th>Hours</th>
                </tr>
                
                @foreach (var item in Model.Workings)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Employee.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Hours)</td>

                    </tr>
                }


                @{
                    var result = Model.Workings.GroupBy(g => g.ProjectID).Select(s => new { Total = s.Sum(i => i.Hours) });
                    <tr>
                        <td></td>
                        <td><strong>Total: </strong>@result.FirstOrDefault().Total</td>
                    </tr>
                }
                
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProjectID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
